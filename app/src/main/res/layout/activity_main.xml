<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="40dp"
    tools:context="unapec.arquitectura.opensource.di_visor.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Di-Visor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sp_coin"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_consultar"
        android:layout_alignStart="@+id/btn_consultar"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp" />

    <Spinner
        android:id="@+id/sp_action"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp_coin"
        android:layout_alignStart="@+id/sp_coin"
        android:layout_below="@+id/sp_coin"
        android:layout_marginTop="35dp" />

    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_action"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"
        android:text="Consultar" />

    <Button
        android:id="@+id/btn_historic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_consultar"
        android:layout_alignStart="@+id/btn_consultar"
        android:layout_below="@+id/btn_consultar"
        android:layout_marginTop="19dp"
        android:textAllCaps="false"
        android:text="Historico" />

</RelativeLayout>
